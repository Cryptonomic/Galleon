{
  "name": "galleon",
  "version": "1.5.0",
  "description": "Wallet software for the Tezos blockchain",
  "main": "./public/electron.js",
  "scripts": {
    "start": "concurrently \"npm run webpack-start\" \"npm run electron-start\"",
    "webpack-start": "webpack serve --mode development --env development",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "electron-start": "wait-on tcp:3000 && electron .",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm build"
  },
  "author": {
    "name": "Cryptonomic Inc",
    "email": "info@cryptonomic.tech"
  },
  "build": {
    "appId": "tech.galleon-wallet.galleon",
    "productName": "Galleon",
    "files": [
      "public/**/*",
      "src/**/*",
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        "dmg",
        "mas"
      ],
      "hardenedRuntime": true,
      "entitlements": "./entitlements/entitlements.mac.plist",
      "entitlementsInherit": "./entitlements/entitlements.mac.plist",
      "icon": "icon.png",
      "provisioningProfile": "/Users/vishakh/Downloads/Galleon_DMG.provisionprofile",
      "notarize": {
        "teamId": "G7QQMG8Q65"
      }
    },
    "dmg": {
      "sign": true
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Finance"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webpack": "^5.28.5",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@taquito/rpc": "^20.0.1",
    "@taquito/signer": "^20.0.1",
    "@taquito/taquito": "^20.0.1",
    "bs58check": "^4.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "electron-is-dev": "^3.0.1",
    "libsodium-wrappers-sumo": "^0.7.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stream-browserify": "^3.0.0",
    "vm-browserify": "^1.1.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  }
}
